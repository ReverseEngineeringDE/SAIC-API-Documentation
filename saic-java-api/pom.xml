            <phase>process-sources</phase>
            <configuration>
              <mainClass>org.bn.compiler.Main</mainClass>
              <arguments>
                <argument>-m</argument>
                <argument>java</argument>
                <argument>-o</argument>
                <argument>target/generated-sources/asn1-java/net/heberling/ismart/asn1/v3_0</argument>
