              <arguments>
                <argument>-m</argument>
                <argument>java</argument>
                <argument>-o</argument>
                <argument>target/generated-sources/asn1-java/net/heberling/ismart/asn1/v3_0</argument>
                <argument>-f</argument>
                <argument>../ASN.1 schema/v3_0/ApplicationData.asn1</argument>
                <argument>-ns</argument>
                <argument>net.heberling.ismart.asn1.v3_0</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
